<h2 class="delille-collection-list__title">{{ section.settings.title }}</h2>
<div class="delille-collection-list__container">
{% for block in section.blocks limit: section.blocks.size %}
    {%- assign collection = collections[block.settings.collection] -%}
    {% include 'delille-collection-item' %}
{% endfor %}
</div>





{% schema %}
{
  "name": {
    "en": "d collection list",
    "de": "Kategorien-Liste",
    "fr": "Liste des collections"
  },
  "class": "centered white-transparent top-margined delille-collection-list",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Heading",
        "de": "Titel",
        "fr": "En-tête"
      },
      "default": {
        "en": "discover the collection",
        "de": "Kategorien-Liste",
        "fr": "Page de liste des collections"
      }
    },
    {
      "type": "range",
      "id": "grid",
      "label": {
        "en": "Collections per row",
        "de": "Kategorien per Reihe",
        "fr": "Collections par rangée"
      },
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": {
        "en": "Collection",
        "de": "Kategorie",
        "fr": "Collection"
      },
      "settings": [
        {
          "label": {
            "en": "Collection",
            "de": "Kategorie",
            "fr": "Collection"
          },
          "id": "collection",
          "type": "collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "d Collection list",
        "de": "Kategorien-Liste",
        "fr": "Page de liste des collections"
      },
      "category": {
        "en": "Collection",
        "de": "Kategorie",
        "fr": "Collection"
      },
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}
