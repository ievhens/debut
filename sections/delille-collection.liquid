{%- assign collection = collections[section.settings.collection] -%}
{%- assign product_limit = 2 | times: section.settings.rows -%}

{% for product in collection.products limit: product_limit %}
    <article class="delille-featured-collection-item white-transparent top-margined">
        {% include 'delille-product-card' %}
    </article>
{% endfor %}

{% schema %}
{
  "name": "d featured collection",
  "class": "delille-featured-collection centered",
  "settings": [
    {
      "id": "collection",
      "type": "collection",
      "label": {
        "en": "Collection",
        "de": "Kategorie",
        "fr": "Collection"
      }
    },
    {
      "type": "range",
      "id": "rows",
      "label": {
        "en": "Rows",
        "de": "Reihen",
        "fr": "Rangées"
      },
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": {
        "en": "Show product vendors",
        "de": "Produkt-Lieferanten anzeigen",
        "fr": "Afficher les vendeurs"
      },
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": {
        "en": "Show 'View all' button",
        "de": "'Alle anzeigen' Button anzeigen",
        "fr": "Afficher le bouton “Tout voir”"
      },
      "default": false
    }
  ],
  "presets": [
    {
      "name": "d Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
