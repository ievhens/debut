{% assign cpu_section_product = false %}
{% if section.settings.product != blank %}
    {% assign cpu_section_product = all_products[section.settings.product] %}
{% endif %}

{% include 'gwa-cpu-widget', cpu_product: cpu_section_product %}

{% schema %}
{
"name": "Customer Photo Uploader",
"class": "gwa-cpu-widget-section",
"settings": [
{
"type": "paragraph",
"content": "You can choose a specific product for images to be displayed in widget"
},
{
"type": "product",
"id": "product",
"label": "Product"
}
],
"presets": [
{
"name": "Customer Photo Uploader",
"category": "Customer Photo Uploader"
}
]
}
{% endschema %}