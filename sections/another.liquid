
<div style="width: 300px;height: 300px;border: 1px solid red
{% if section.settings.options.value == right %}
  float: right;
{% endif %}"></div>


{% schema %}
{
  "name": "Text Box",
  "settings": [
    {
      "id": "align",
      "type": "select",
      "label": "align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "another section",
      "category": "another category"
    }
  ]
}
{% endschema %}