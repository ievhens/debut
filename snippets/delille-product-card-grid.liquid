<div class="product-card-delille">
    {% capture img_id %}ProductCardImage-{{ section.id }}-{{ product.id }}{% endcapture %}
    {% capture wrapper_id %}ProductCardImageWrapper-{{ section.id }}-{{ product.id }}{% endcapture %}
    {%- assign img_url = product.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

    {% unless product.featured_image == blank %}
        {% include 'image-style' with image: product.featured_image, width: max_height, height: max_height, small_style: true, wrapper_id: wrapper_id, img_id: img_id %}
    {% endunless %}
    <div class="grid-view-item__title__delille" aria-hidden="true">{{ product.title }}</div>
    <div id="{{ wrapper_id }}" class="grid-view-item__image-wrapper js">
        <div style="padding-top:{% unless product.featured_image == blank %}{{ 1 | divided_by: product.featured_image.aspect_ratio | times: 100}}%{% else %}100%{% endunless %};">
            <img id="{{ img_id }}"
                 class="grid-view-item__image lazyload"
                 src="{{ product.featured_image | img_url: '300x300' }}"
                 data-src="{{ img_url }}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ product.featured_image.aspect_ratio }}"
                 data-sizes="auto"
                 alt="">
        </div>
    </div>
    <p class="grid-view-item__description" aria-hidden="true">{{ product.description }}</p>
    <div class="grid-view-item__buy-info">
        <div class="grid-view-item__buy-info__item">
            <table>
                <tr>
                    <td colspan="3">price</td>
                </tr>
                <tr>
                    <td>bottle</td>
                    <td>/</td>
                    <td>case</td>
                </tr>
                <tr>
                    <td>{{ product.price | money_without_trailing_zeros }}</td>
                    <td>/</td>
                    <td>{{ product.price | times: 12 | money_without_trailing_zeros }}</td>
                </tr>
            </table>
        </div>
        <div class="grid-view-item__buy-info__item">
            {% form 'product', product %}
                <label for="quantity">qty</label>
                <div class="quantity less">â€“</div>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max="100"><br>
                <div class="quantity more">+</div>
                <button type="submit">buy now</button>
            {% endform %}
        </div>
        <div class="grid-view-item__buy-info__item">
            <a href="{{ product.url }}"><img class="card-buy-btn" src={{ "button_buy.png" | asset_url }} alt="buy de lille wine"></a>
        </div>
    </div>
    <noscript>
        {% capture image_size %}{{ max_height }}x{{ max_height }}{% endcapture %}
        <img class="grid-view-item__image" src="{{ product.featured_image.src | img_url: image_size, scale: 2 }}" alt="{{ product.featured_image.alt }}" style="max-width: {{ max_height | times: product.featured_image.aspect_ratio }}px;">
    </noscript>
</div>


